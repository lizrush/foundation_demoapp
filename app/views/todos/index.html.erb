<dl class="tabs" data-tab data-options="deep_linking: true">
  <dd class="active">
    <%= link_to 'View list', todos_path %>
  </dd>
  <dd>
    <%= link_to 'New todo', new_todo_path %>
  </dd>
</dl>



<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>
        <td><%= link_to 'Show', todo, class: 'button tiny radius' %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: 'button tiny radius' %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: 'button success radius small' %>
